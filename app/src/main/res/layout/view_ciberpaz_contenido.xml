<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/containerRetroceso"
    android:layout_marginStart="@dimen/_5sdp"
    >


    <LinearLayout android:id="@+id/containerAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        >

        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lott_brain"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/brain_lottie"
            android:visibility="gone"
            android:background="@drawable/round_circle"
            >
        </com.airbnb.lottie.LottieAnimationView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgCiberPaz"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/round_circle"
            android:backgroundTint="@color/white"
            android:src="@drawable/paloma_ciberpaz"
            android:layout_gravity="center_vertical"
            />

        <TextView android:id="@+id/txtCiberPazTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/round_editext"
            android:text="CiberPaz es increíble, ¡no te pierdas todo lo que tiene preparado para ti!"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:visibility="visible"
            android:padding="@dimen/_5sdp"
            >
        </TextView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCiberPaz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <Button android:id="@+id/btnModuloCiberPaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_border"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:text="Modulo de sensibilización CiberPaz\nBuscame como equipo Efecto Mariposa(clic)"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/paloma_ciberpaz"
        >
    </Button>




</LinearLayout>